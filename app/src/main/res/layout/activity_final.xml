<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="#ffffff"
        android:elevation="20dp">


        <ImageView
            android:id="@+id/btnBack_receipt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영수증"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:background="@drawable/receipt"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/txtStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서가앤쿡 강남점"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/txtTableNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Table No.2"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/receipt_dialog_round"
            android:layout_gravity="center_horizontal">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </ListView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#E3E3E3"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#FFE996"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요청사항"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:id="@+id/txtRequire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#6E6E6E"
                    android:layout_alignParentRight="true"/>



            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#E3E3E3"/>


            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="식사를 다 하신 후 테이블 번호를 말씀해주시면 결제를 도와드리겠습니다."
                android:textSize="12dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_marginVertical="30dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/txtPrice_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21,800원"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_marginRight="30dp"/>

            <TextView
                android:id="@+id/txtDate_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019.07.24. 오후 06:30"
                android:textSize="10dp"
                android:textColor="#6E6E6E"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_marginRight="30dp"/>

            <TextView
                android:id="@+id/txtAddress_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="서울 서초구 서초대로 73길 24"
                android:textSize="10dp"
                android:textColor="#6E6E6E"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="30dp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#E3E3E3"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:id="@+id/linFinal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/receipt_button_round"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/check"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="확인"
                        android:textColor="#ffffff"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>



            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>